" Set netrw list style
let g:netrw_liststyle = 3

" Tabs & indentation
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent

" Disable line wrap
set nowrap

" Search settings
set ignorecase
set smartcase

" Clipboard
set clipboard+=unnamedplus

" Split windows
set splitright
set splitbelow

" Disable cursor line
set nocursorline

" Turn off swap file
set noswapfile

" Set relative line numbers
set relativenumber

