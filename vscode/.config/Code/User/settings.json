{
  "vim.useSystemClipboard": true,
  "vim.smartcase": true,
  "vim.ignorecase": true,
  "vim.wrap": false,
  "vim.relativeLineNumber": true,
  "vim.cursorLine": false,
  "vim.tabStop": 2,
  "vim.shiftWidth": 2,
  "vim.expandTab": true,
  "vim.autoindent": true,
  "vim.splitRight": true,
  "vim.splitBelow": true,
  "vim.tabNew": true,
  "vim.visualModeKeyBindingsNonRecursive": {
    "p": "_dP"
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "nh"],
      "commands": [":nohl<CR>"]
    },
    {
      "before": ["<leader>", "+"],
      "commands": ["<C-a>"]
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["<C-x>"]
    },
    {
      "before": ["<leader>", "sv"],
      "commands": ["<C-w>v"]
    },
    {
      "before": ["<leader>", "sh"],
      "commands": ["<C-w>s"]
    },
    {
      "before": ["<leader>", "se"],
      "commands": ["<C-w>="]
    },
    {
      "before": ["<leader>", "sx"],
      "commands": ["<cmd>close<CR>"]
    },
    {
      "before": ["<leader>", "to"],
      "commands": ["<cmd>tabnew<CR>"]
    },
    {
      "before": ["<leader>", "tx"],
      "commands": ["<cmd>tabclose<CR>"]
    },
    {
      "before": ["<leader>", "tn"],
      "commands": ["<cmd>tabn<CR>"]
    },
    {
      "before": ["<leader>", "tp"],
      "commands": ["<cmd>tabp<CR>"]
    },
    {
      "before": ["<leader>", "tf"],
      "commands": ["<cmd>tabnew %<CR>"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["<C-w>h"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["<C-w>j"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["<C-w>k"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["<C-w>l"]
    },
    {
      "before": ["<C-Up>"],
      "commands": [":resize -2<CR>"]
    },
    {
      "before": ["<C-Down>"],
      "commands": [":resize +2<CR>"]
    },
    {
      "before": ["<C-Left>"],
      "commands": [":vertical resize -2<CR>"]
    },
    {
      "before": ["<C-Right>"],
      "commands": [":vertical resize +2<CR>"]
    },
    {
      "before": ["<leader>", "bd"],
      "commands": ["<Cmd>bd<CR>"]
    },
    {
      "before": ["<leader>", "bp"],
      "commands": ["<cmd>bprev<cr>"]
    },
    {
      "before": ["<leader>", "bn"],
      "commands": ["<cmd>bnext<cr>"]
    },
    {
      "before": ["<leader>", "bf"],
      "commands": ["<cmd>bfirst<cr>"]
    },
    {
      "before": ["<leader>", "bl"],
      "commands": ["<cmd>blast<cr>"]
    },
    {
      "before": ["<leader>", "nl"],
      "commands": [":set relativenumber!<CR>"]
    }
  ]
}
